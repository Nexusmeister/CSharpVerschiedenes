<UserControl x:Class="TLWindowsEditorWPFDemo.GeneralUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="258" d:DesignWidth="615">
    <Grid>
        
        <StackPanel Margin="10">

            <StackPanel Orientation="Horizontal" Height="24">
                <TextBlock Text="Item Name:" VerticalAlignment="Center" Margin="0,0,10,0"></TextBlock>
                <TextBox Name="txtItemName" Width="100"></TextBox>
            </StackPanel>
            
            <GroupBox Header="Comments for this Item:" Margin="0,10,0,0">
                <TextBox Name="txtItemComments" Height="100" Margin="10" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"></TextBox>
            </GroupBox>
            
            <CheckBox Margin="0,30,0,0" Name="chkPrintAsGraphic">Print As Graphic</CheckBox>
        </StackPanel>
        
        
    </Grid>
</UserControl>
